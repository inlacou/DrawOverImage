<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#000000">
	<RelativeLayout
		android:id="@+id/top"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingStart="16dp"
			android:paddingEnd="16dp"
			android:paddingTop="16dp"
			android:paddingBottom="8dp"
			android:textColor="#fff"
			android:text="Cancelar"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true"
			android:paddingStart="16dp"
			android:paddingEnd="16dp"
			android:paddingTop="16dp"
			android:paddingBottom="8dp"
			android:textColor="#fff"
			android:text="Aceptar"/>
	</RelativeLayout>
	<RelativeLayout
		android:id="@+id/side"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_below="@+id/top"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true">
		<Button
			android:id="@+id/erase"
			android:layout_width="32dp"
			android:layout_height="32dp"
			android:layout_margin="8dp"/>
		<Button
			android:id="@+id/stroke"
			android:layout_width="32dp"
			android:layout_height="32dp"
			android:layout_margin="8dp"
			android:layout_above="@+id/color"/>
		<Button
			android:id="@+id/color"
			android:layout_width="32dp"
			android:layout_height="32dp"
			android:layout_margin="8dp"
			android:layout_alignParentBottom="true"/>
	</RelativeLayout>
	<colorpickerlayout.inlacou.bvapps.com.colorpicklayout.ColorPickLayout
		android:id="@+id/colorPickLayout"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/top"
		android:layout_alignParentStart="true"
		android:layout_alignParentBottom="true"
		android:layout_toStartOf="@+id/side">
		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="8dp"
			android:background="#20f0"
			android:gravity="start|bottom">
			<ImageView
				android:id="@+id/image"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				tools:background="#fff"
				android:background="#f00"/>
			<picturedraweditor.inlacou.bvapps.com.picturedraweditor.CanvasView
				android:id="@+id/canvas"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignTop="@+id/image"
				android:layout_alignBottom="@+id/image"
				android:layout_alignStart="@+id/image"
				android:layout_alignEnd="@+id/image"/>
		</RelativeLayout>
	</colorpickerlayout.inlacou.bvapps.com.colorpicklayout.ColorPickLayout>
</RelativeLayout>