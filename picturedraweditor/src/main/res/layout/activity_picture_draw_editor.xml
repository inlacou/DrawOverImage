<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#000000">
	<RelativeLayout
		android:id="@+id/top"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<ImageView
			android:id="@+id/btnCancel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingStart="8dp"
			android:paddingEnd="8dp"
			android:paddingTop="8dp"
			android:paddingBottom="8dp"
			android:textColor="#fff"
			android:src="@drawable/close"/>
		<ImageView
			android:id="@+id/btnAccept"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:paddingStart="8dp"
			android:paddingEnd="8dp"
			android:paddingTop="8dp"
			android:paddingBottom="8dp"
			android:textColor="#fff"
			android:src="@drawable/save"/>
	</RelativeLayout>
	<RelativeLayout
		android:id="@+id/side"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_below="@+id/top"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true">
		<RelativeLayout
			android:id="@+id/erase"
			android:layout_width="32dp"
			android:layout_height="32dp"
			android:layout_margin="8dp"
			android:background="#fff">
			<ImageView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:src="@drawable/eraser"/>
		</RelativeLayout>
		<RelativeLayout
			android:id="@+id/undo"
			android:layout_width="32dp"
			android:layout_height="32dp"
			android:layout_margin="8dp"
			android:layout_below="@+id/erase"
			android:background="#fff">
			<ImageView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:src="@drawable/undo"/>
		</RelativeLayout>
		<RelativeLayout
			android:id="@+id/redo"
			android:layout_width="32dp"
			android:layout_height="32dp"
			android:layout_margin="8dp"
			android:layout_below="@+id/undo"
			android:background="#fff">
			<ImageView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:src="@drawable/redo"/>
		</RelativeLayout>
		<RelativeLayout
			android:id="@+id/color"
			android:layout_width="32dp"
			android:layout_height="64dp"
			android:layout_margin="8dp"
			android:layout_alignParentBottom="true"
			android:background="#fff">
			<ImageView
				android:id="@+id/brush_color_display"
				android:layout_width="match_parent"
				android:layout_height="32dp"
				android:src="@drawable/brush"/>
			<picturedraweditor.inlacou.bvapps.com.picturedraweditor.CircleView
				android:id="@+id/color_display"
				android:layout_width="match_parent"
				android:layout_height="32dp"
				android:layout_alignParentBottom="true"
				app:circleRadius="14dp"
				app:strokeWidth="2dp"
				app:circleGap="1dp"
				app:fillColor="@android:color/holo_orange_light"
				app:strokeColor="#DDD"
				android:src="@drawable/brush"/>
		</RelativeLayout>
	</RelativeLayout>
	<colorpickerlayout.inlacou.bvapps.com.colorpicklayout.ColorPickLayout
		android:id="@+id/colorPickLayout"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/top"
		android:layout_toStartOf="@+id/side"
		android:layout_alignParentStart="true"
		android:layout_alignParentBottom="true">
		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="8dp"
			android:gravity="start|bottom">
			<ImageView
				android:id="@+id/image"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
			<picturedraweditor.inlacou.bvapps.com.picturedraweditor.CanvasView
				android:id="@+id/canvas"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignTop="@+id/image"
				android:layout_alignBottom="@+id/image"
				android:layout_alignStart="@+id/image"
				android:layout_alignEnd="@+id/image"/>
		</RelativeLayout>
	</colorpickerlayout.inlacou.bvapps.com.colorpicklayout.ColorPickLayout>
</RelativeLayout>